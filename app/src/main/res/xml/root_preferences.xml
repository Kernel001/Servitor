<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/c1_title">

        <EditTextPreference
            app:key="c1_addr"
            app:title="@string/c1_addr"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="http://srv-1c-1/"/>
        <EditTextPreference
            app:key="c1_db"
            app:title="@string/c1_db"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="ut"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/servitor_title">

        <EditTextPreference
            app:key="terminalPrefix"
            app:title="@string/pref_exchangeDir_title"
            app:useSimpleSummaryProvider="true"
            app:summary="@string/terminal_prefix_summary" />
        <EditTextPreference
            app:key="terminalID"
            app:title="@string/pref_terminalID_title"
            app:useSimpleSummaryProvider="true"
            app:summary="@string/terminal_id_summary"/>
        <EditTextPreference
            app:key="timeout"
            app:defaultValue="60"
            app:title="Время ожидания отправки данных"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>
